<div class="modal hide fade" id="embed-modal">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <b>Embed this set on your website</b>
  </div>
  <div class="modal-body" style="max-height:600px;">

    <div class="row-fluid">
      <div class="span8 embed-preview">
        
      </div>
     
      <div class="span4">
        <p>Copy this code onto your blog to share your spectral data:</p>
        <textarea onClick="$(this).focus()" id="embed-code" cols="60" rows="6"><iframe width='100%' height='700px' style='border:none;' src='http://spectralworkbench.org/sets/embed2/<%= set.id %>'></iframe></textarea>
      </div>
    </div>

  </div>
  <div class="modal-footer">
    <a data-dismiss="modal" href="#" class="btn">Close</a>
  </div>
</div> 
<script>
  (function() {
    $('#embed-modal').on('show',function(){
      $('.embed-preview').html("<iframe width='100%' height='700px' style='border:none;' src='/sets/embed2/<%= set.id %>'></iframe>")
    })
  })()
</script>
